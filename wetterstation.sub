	esac
	if [ "${UV_TMP}" -ge "11" ]; then UV_BELASTUNG="extrem hoch"; fi
}



###Hilfsfunktionen
timestr() {
	SON_STR=$(echo "$(($1 /3600)) Std. $(($1 % 3600 /60)) Min. $(($1 % 60)) Sek.")
	echo $SON_STR
}

round() {
    bc -l <<END_BC
        define round(number,r_scale)
        {
            auto o_scale
            o_scale = scale
            scale = r_scale+1
            number += 5 / (10 ^ scale)
            scale = r_scale
            number /= 1
            scale = o_scale
            return number
        }
        round ($1,$2)
END_BC
}

reset_sonnenschein() {
	#Tageszähler resetten
	SONNENSCHEIN_TAG=-$WS_POLL

	#Wochenzähler resetten (Sonntags um 0:00 Uhr)
	if [ `date +%u` -eq "7" ]; then SONNENSCHEIN_WOCHE=-$WS_POLL; fi

	#Monatszähler resetten 
	if [ $(date -d "now + 1 day" +"%d") -eq "01" ]; then 
	  SONNENSCHEIN_MONAT=-$WS_POLL 
	  if [ `date +%m` -eq "12" ]; then
		#Jahreszähler resetten
		curl http://${IPP}/set/${DP_REGENMENGE_VORJAHR}?value="${REGENMENGE}" >/dev/null 2>&1
		curl http://${IPP}/set/${DP_SONNENSCHEIN_VORJAHR}?value="${SONNENSCHEIN_JAHR}" >/dev/null 2>&1
		REGENMENGE=0
		SONNENSCHEIN_JAHR=0
	  fi
	fi

	MIDNIGHTRUN=1
	sonnenpuls
	unset MIDNIGHTRUN

}

